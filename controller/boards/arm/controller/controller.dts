/dts-v1/;
#include <st/f3/stm32f303Xe.dtsi>
#include <st/f3/stm32f303r(d-e)tx-pinctrl.dtsi>

/ {
    model = "Flight controller F3 V1";
    compatible = "controller";
    chosen {
        zephyr,console = &usart2;
        zephyr,shell-uart = &usart2;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
    };

    leds {
        compatible = "gpio-leds";
        led_blue: led_1 {
            gpios = <&gpiob 0 GPIO_ACTIVE_HIGH>;
        };
        led_green: led_2 {
            gpios = <&gpiob 1 GPIO_ACTIVE_HIGH>;
        };
    };
};

&clk_lsi {
    status = "okay";
};

&clk_hse {
    status = "okay";
    clock-frequency = <DT_FREQ_M(12)>;
};

&pll {
    prediv = <1>;
    mul = <6>;
    clocks = <&clk_hse>;
    status = "okay";
};

&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(72)>;
    ahb-prescaler = <1>;
    apb1-prescaler = <2>;
    apb2-prescaler = <1>;
};

&usart2 {
    pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
    pinctrl-names = "default";
    current-speed = <115200>;
    status = "okay";
};

&spi1 {
    status = "okay";
    pinctrl-0 = <&spi1_sck_pa5 &spi1_miso_pa6 &spi1_mosi_pa7>;
    pinctrl-names = "default";
    cs-gpios = <&gpioc 4 GPIO_ACTIVE_LOW>;

    lsm6dso: lsm6dso@0 {
        status = "okay";
        compatible = "st,lsm6dso";
        spi-max-frequency = <DT_FREQ_M(10)>;
        reg = <0>;
        irq-gpios = <&gpioa 4 GPIO_ACTIVE_HIGH>;
    };
};

&i2c1 {
    status = "okay";
    pinctrl-0 = <&i2c1_sda_pb7 &i2c1_scl_pb8>;
    pinctrl-names = "default";
    clock-frequency = <I2C_BITRATE_FAST>;
    
    bq27441: bq27441-g1a@55 {
        status = "okay";
        compatible = "ti,bq274xx";
        reg = <0x55>;
        design-voltage = <3700>;
        design-capacity = <520>;
        taper-current = <45>;
        terminate-voltage = <3000>;
    };
};

&timers1 {
    status = "okay";
    st,prescaler = <100>;

    pwm0: pwm-0 {
        compatible = "st,stm32-pwm";
		#pwm-cells = <3>;
        status = "okay";
        pinctrl-0 = <&tim1_ch1_pc0 &tim1_ch2_pc1 &tim1_ch3_pc2 &tim1_ch4_pc3>;
        pinctrl-names = "default";
    };
};

&timers2 {
    status = "okay";
    st,prescaler = <100>;
    
    pwm1: pwm-1 {
        compatible = "st,stm32-pwm";
		#pwm-cells = <3>;
        status = "okay";
        pinctrl-0 = < &tim2_ch1_pa0 &tim2_ch2_pa1>;
        pinctrl-names = "default";
    };
};

&timers8 {
    status = "okay";
    st,prescaler = <100>;

    pwm2: pwm-2 {
        compatible = "st,stm32-pwm";
		#pwm-cells = <3>;
        status = "okay";
        pinctrl-0 = <&tim8_ch1_pc6 &tim8_ch2_pc7 &tim8_ch3_pc8 &tim8_ch4_pc9>;
        pinctrl-names = "default";
    };
};

/* This one will not work together with timers1 due to shared IRQ */
&timers15 {
    status = "disabled";
};
